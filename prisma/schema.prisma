// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int         @id
  username    String
  password    String
  displayName String
  bio         String
  birth       String
  createdOn   String
  updatedOn   String
  tweets      Tweet[]
  followers   Followers[]
  following   Following[]
}

model Followers {
  id         Int   @id
  followerId Int
  user       User? @relation(fields: [userId], references: [id])
  userId     Int?
}

model Following {
  id          Int   @id
  followingId Int
  user        User? @relation(fields: [userId], references: [id])
  userId      Int?
}

model Tweet {
  id       Int    @id
  text     String @db.VarChar(280)
  postDate String
  likes    Int
  user     User?  @relation(fields: [userId], references: [id])
  userId   Int?
}
